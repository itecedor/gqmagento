<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
		<system>
			<tab id="Milople" translate="label" sortOrder="200">
           		<label>Milople Extensions</label>
       	 	</tab>
	       	<section id="requestforquote" translate="label" type="text" sortOrder="140" showInDefault="1" showInWebsite="1" showInStore="1">
				<label>Request For Quote</label>
				<tab>Milople</tab>
				<!-- resource tag name which we have to defined in the acl.xml -->
				<resource>Milople_Requestforquote::config_requestforquote</resource>
					<!--Group Serial Key -->
					<group id="license_status_group" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
						<!-- Group Name -->
						<label>License And Status</label>
							<field id="serial_key" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
	               <label>Serial Key</label>
	               <backend_model>Milople\Requestforquote\Model\Config\Backend\Lookup</backend_model>	  
	            </field> 
							<field id="status" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                 	<label>Status</label>
		    					<source_model>Milople\Requestforquote\Model\Config\Source\Status</source_model>
              </field>
							<field id="requestforquote_customergroups" translate="label" type="multiselect" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
								<label>Enable for Customer Groups</label>
								<source_model>Milople\Requestforquote\Model\Config\Source\Customergroups</source_model>
								<validate>required-entry</validate>
							</field>
					</group>
					<group id="tag_setting_group" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
						<label>Request For Quote Settings</label>
							<field id="call_us_on_label" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
	               <label>Call Us On Label</label>
								 <validate>validate-length maximum-length-25</validate>  			  
								 <comment>Applies on all product listing pages like category page, search result page etc. Maximum 25 characters allowed.</comment>
	            </field>
							<field id="color" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
								<label>Call Us On Label Color</label>
								<comment>Applies on all product listing pages like category page, search result page etc.</comment>
								<validate>required-entry</validate>
								<frontend_model>Milople\Requestforquote\Block\Color</frontend_model>
							</field>
							<field id="upload_image_id" translate="label comment" type="image" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
								<label>Request For Quote Image</label>
								<backend_model>Milople\Requestforquote\Model\Config\Backend\Image</backend_model>
								<base_url type="media" scope_info="1">upload</base_url>
								<comment>Applies only on Product Page. Allowed file types: jpeg, gif, png.</comment>
							</field>
							<field id="call_us_on_contact_number" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="0" showInStore="0">
	               <label>Call Us On Contact Number</label>
								 <validate>validate-length maximum-length-30</validate>	  
								 <comment>Applies only on Product Page. Maximum 30 characters allowed.</comment>
	            </field>
							<field id="show_enquiry_button" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="0" showInStore="0">
	               <label>Show Enquiry Button</label>
	                <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
							</field>
							<field id="enquire_now_button_text" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
								<label>Enquire Now Button Text</label>
								<validate>validate-length maximum-length-15</validate>
								<comment>Applies on all product listing pages like category page, search result page etc. Maximum 15 characters allowed.</comment>
							</field>
							<field id="enquiry_form_title" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
								<label>Enquiry Form Title</label>	 
								<validate>validate-length maximum-length-15</validate>
								<comment>Applies for title of the enquiry form. Maximum 15 characters allowed. Example: Enquiry Form for Fusion Backpack</comment>
							</field>
							<field id="show_terms_and_conditions" translate="label" type="select" sortOrder="70" showInDefault="1" showInWebsite="0" showInStore="0">
	              <label>Show Terms And Conditions</label>
	              <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
	            </field>
							<field id="send_enquiry_emails_to" translate="label" type="text" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1">
								<label>Send Enquiry Emails To</label>
								<validate>validate-email</validate>
							</field>
					</group>
					<group id="enquiry_acknowledgement_settings" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
						<label>Enquiry Acknowledgement Settings</label>
							<field id="send_acknowledgement" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
	               <label>Send Enquiry Acknowledgement</label>
	               <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
	            </field>
							<field id="subject" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
								<label>Subject</label>
							</field>
							<field id="email_sender" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0">
	                <label>Sender Email ID</label>
								  <validate>required-entry validate-email</validate>  			  
								 	<comment>Acknowledgement mails will be sent from the mentioned email address entered in the field.</comment>
	            </field>
							<field id="sender_name" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="0" showInStore="0">
	               <label>Sender Name</label>
								 <validate>required-entry validate-length maximum-length-25</validate>  			  
								 <comment>Name of the email sender. Maximum 25 characters allowed.</comment>
	            </field>
							<field id="message" translate="label" type="textarea" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
								<label>Message</label>
							</field>
					</group>
			</section>
		</system>
</config>